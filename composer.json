{
    "name": "badrshs/laravel-dynamic-image-composer",
    "description": "Compose images dynamically from templates with text and image overlays",
    "keywords": [
        "laravel",
        "image",
        "composer",
        "dynamic",
        "template",
        "text-overlay",
        "image-generation"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Badr Shs",
            "email": "dev@badrshs.com"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3|^8.4",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/database": "^10.0|^11.0|^12.0",
        "ext-gd": "*",
        "arphp/laravel-arabic": "^4.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "suggest": {
        "filament/filament": "^3.0|^4.0 - Required if you want to use the Filament admin resources"
    },
    "autoload": {
        "psr-4": {
            "Badrshs\\DynamicImageComposer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Badrshs\\DynamicImageComposer\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Badrshs\\DynamicImageComposer\\DynamicImageComposerServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}